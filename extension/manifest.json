{
  "manifest_version": 3,
  "name": "Canvas MCP Server",
  "version": "1.0.0",
  "description": "MCP Server for Canvas LMS - Provides Canvas data to AI assistants via Model Context Protocol",
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "alarms",
    "scripting"
  ],
  "host_permissions": [
    "*://*.edu/*",
    "*://*.instructure.com/*",
    "*://*.canvaslms.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": [
      "*://*.edu/*",
      "*://*.instructure.com/*",
      "*://*.canvaslms.com/*"
    ],
    "js": ["content.js"],
    "run_at": "document_idle"
  }],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Canvas MCP Server"
  },
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  }
}
